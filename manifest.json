{
  "manifest_version": 2,

  "name": "Solarized Dark Refresh",
  "description": "A solarized dark theme for the new Google Chrome browser design.",
  "version": "1.0.2",

  "theme": {
    "images": {
      "theme_ntp_background": "images/theme_ntp_background.png"
    },
    "colors": {
      "frame": [ 0, 0, 0 ],
      "frame_inactive": [ 63, 63, 63 ],
      "frame_incognito": [ 0, 0, 0 ],
      "frame_incognito_inactive": [ 63, 63, 63 ],
      "toolbar": [ 51, 51, 51 ],
      "tab_text": [ 255, 255, 255 ],
      "tab_background_text": [ 198, 198, 198 ],
      "bookmark_text": [ 198, 198, 198 ],
      "ntp_background": [ 0, 0, 0 ],
      "ntp_text": [ 255, 255, 255 ],
      "ntp_link_underline": [ 255, 0, 0 ]
    },
    "tints": {
      "buttons": [ 0, 0, 1 ]
    },
    "properties": {
      "ntp_logo_alternate": 1,
      "ntp_background_repeat": "repeat"
    }
  }
}